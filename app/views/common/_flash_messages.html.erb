<div class=top-buffer ></div>
<% flash.each do |type, message| %>
  <div class="alert <%= bootstrap_class_for(type) %> alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <% if type != :timeout %>
      <%= message %>
    <% end %>
  </div>
<% end %>
