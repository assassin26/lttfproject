
  <p align=center><%= link_to '返回前頁', :back %></p>
 


  <div class="table-responsive datagrid">
    <table class="datatable table-striped" border=1 link=blue>
      <caption class="text-center" ><strong><%= @game.gamename %></strong></caption> 
      <thead>
        <tr>
        <th>序號</th>
        <th>會員編號</th>
        <th>會員姓名</th>
        <th>賽前積分</th>
        <th>勝場數</th>
        <th>敗場數</th>
        <th>賽後積分</th>
        <th>積分增減</th>
          
        </tr>
      </thead>  
      <tbody>
        <%  @playerssummery.each_with_index do |player, index| %> 
          <tr>
          <td> <%=index+1%> </td>
          <td><%= player["id"] %></td>
          <td style="white-space: nowrap;">
              <%= link_to playerprofile_path(player["id"].to_i) do %>
            <i class="fa fa-file-o"></i>&nbsp;<font color="#3A01DF"> <%= player["name"] %></font>
          <% end %>
        </td>
          
          <td><%= player["bgamescore"] %></td>
          <td><%= player["wongames"] %></td>
          <td><%= player["losegames"] %></td>
          <td><%= player["agamescore"] %></td>
          <td><%= player["scorechanged"] %></td>
          </tr>
        <% end %>
      </tbody>    
      
    </table>  
  </div>
   
  
  <br>
  <div class="table-responsive datagrid">
    <table class="datatable table-striped" border=1 link=blue>
      <caption class="text-center" ><strong>詳細比賽紀錄</strong></caption> 
      <thead>
        <tr> 
        <th>比賽組別</th>
        <th>勝方姓名</th>
        <th>大比數</th>
        <th>敗方姓名</th>
        <th>小比數</th>
        </tr>
      </thead>
      <tbody>  
        <%  @gamesrecords.each do |game| %>
          <tr>
          <td align=left><font color=blue><%= game["group"] %></font></td>
          <td align=center><font color=blue><%= game["Aplayer"] %></font>
              <%if game["Players_scorechanged"] %>
                <br>
                <font color='red'>(+<%= game["Players_scorechanged"].to_s %>) </font>
             <%end%>
          </td>
          <td align=center><font color=blue><%= game["gameresult"] %></font></td>
          <td align=center><font color=blue><%= game["Bplayer"] %></font>
              <%if game["Players_scorechanged"] %>
                <br>
                <font color='red'>(-<%= game["Players_scorechanged"].to_s %>) </font>
             <%end%>
          </td>
          <td align=left><font color=blue><%= game["detailrecords"] %></font></td>
          </tr>
        <% end %>

      </tbody> 
    </table>
  </div>
      
         
 








