
  <% if !@uploadgame %>
    <%= form_tag displayuploadfile_uploadgames_path, :method => :get do %>
      <%= text_field_tag "gamefileurl" %>
      <%= submit_tag "上傳" %>
    <%end%>
  <%else%>  

   
    <p align=center>

      <%= link_to '返回前頁',  uploadgames_path %>
 
    </p>
    <div class="table-responsive datagrid">
      <table class="datatable table-striped" border=1 link=blue>
        <caption class="text-center" ><strong><%= @uploadgame.gamename %></strong></caption> 
        <thead>
          <tr>
          <th>序號</th>
          <th>會員編號</th>
          <th>會員姓名</th>
          <th>賽前積分</th>
          <th>勝場數</th>
          <th>敗場數</th>
          <th>賽後積分</th>
          <th>積分增減</th>
          <th>建議積分</th>
          </tr>
        </thead>
        <tbody>  
          <%  @playerssummery.each do |player| %>
  
            <tr>  
     
            <td > <%= player["serial"] %></td>
            <td >  <%= player["id"] %></td>
            <td><%= player["name"] %></td>
            <td><%= player["bgamescore"] %></td>
            <td><%= player["wongames"] %></td>
            <td><%= player["losegames"] %></td>
            <td><%= player["agamescore"] %></td>
            <td> <%= player["scorechenged"] %></td>
            <td> <%= number_field_tag player["scorechenged"] %></td>
      
            </tr>
          <% end %>
        </tbody>
        <tfoot>
        </tfoot>
      </table>  
    </div>   
    <div class="table-responsive datagrid">
      <table class="datatable table-striped" border=1 link=blue>
        <caption class="text-center" ><strong>詳細比賽紀錄表</strong></caption>
        <thead>
          <tr>
          <th>比賽組別</th>
          <th>勝方姓名</th>
          <th>大比數</th>
          <th>敗方姓名</th>
          <th>小比數</th>
          </tr>
        </thead>
        <tbody>
          <%  @gamesrecords.each do |game| %>
            <tr>  
            <td align=left><font color=blue><%= game["group"] %></td>
            <td align=center><font color=blue><%= game["Aplayer"] %></td>
            <td align=center><font color=blue><%= game["gameresult"] %></td>
            <td align=center><font color=blue><%= game["Bplayer"] %></td>
            <td align=left><font color=blue><%= game["detailrecords"] %></td>
            </tr>
          <% end %>
        </tbody>  
      </table> 
    </div>  
    <p align=center>

       <%= link_to 'Edit', edit_uploadgame_path(@uploadgame) %> |
       <%= link_to 'Back', uploadgames_path %>
    </p>   
<% end %>